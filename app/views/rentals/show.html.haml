- content_for :title do
	== #{@property.title} | BlackDog Property

- content_for :link_canonical do
	== rentals/in/#{@country.id}/#{@property.id}

- content_for :scripts do
	= render 'shared/script/rentals/gallery'
	= render 'shared/script/rentals/tabs'

.title
	%h1== #{@property.title} - #{@country.name}
	.line

.breadcrumbs
	= render 'shared/rental/breadcrumbs'

.block.site
	.border
		.details
		-if @photos.present?
			#gallery.property.ad-gallery
				.ad-image-wrapper
				.ad-controls
				.ad-nav
					.ad-thumbs
						%ul.ad-thumb-list
							- @photos.each do |p|
								-if p.image.present?
									%li= link_to (image_tag p.image.url(:thumb), :title => p.title, :alt => p.description), p.image.url(:large)
			#description
		-else
			%h2 Photos of this property will be available soon.
			%p== Please contact us by #{mail_to "enquiries@blackdogproperty.com", "email", :encode => :hex} or by using our #{link_to "enquiry form", new_support_path} and we will email you when they appear here.

	.bottom

.block.site
	.border
		#tab-container
			%ul.etabs
				-if (@property.latitude.present? && @property.longitude.present?)
					%li.tab= link_to "Location", "#tab_location"
				-if @property.description.present?
					%li.tab= link_to "Description", "#tab_description"
				-if @property.facilities.present?
					%li.tab= link_to "Facilities", "#tab_facilities"
				-if @property.price_rental.present?
					%li.tab= link_to "Price", "#tab_price"
				%li.tab= link_to "Contact", "#tab_contact"
			.panel-container
				- if @property.latitude.present? && @property.longitude.present?
					#tab_location
						= gmaps({ "map_options" => { "type" => "HYBRID", "center_longitude" => 180, "auto_zoom" => false, "zoom" => @property.zoom, "auto_adjust" => true}, "markers" => { "data" => @json } } )
						:javascript
							$(document).ready(function() {
								google.maps.event.trigger(map, "resize");
							});
				-if @property.description.present?
					#tab_description
						= markdown(@property.description)

				-if @property.facilities.present?
					#tab_facilities
						= markdown(@property.facilities)

				-if @property.price_rental.present?
					#tab_price
						= markdown(@property.price_rental)

				#tab_contact
					%p== For further information about this property, please contact us by #{mail_to "enquiries@blackdogproperty.com", "email", :encode => :hex, :subject => "Rental Enquiry - " + @property.title} or by using our #{link_to "enquiry form", { :controller => "supports", :action => "new", :enquiry => "rentals", :property_title => @property.title }}.
