%tr
	%td{:style => "width: #{action_name == 'new' ? '200px' : '170px'};"}
		= f.label :sea_views, "Sea views?"
		-if action_name == 'edit'
			= image_tag "question_mark.png", :class => "question_mark", :rel => "tooltip", "data-original-title" => "If the property has views overlooking the sea, tick the checkbox."
	%td
		= f.check_box :sea_views
