- content_for :title do
	Login to your account
	
- content_for :link_canonical do
	signin
	
- content_for :auth_header do
	%h1 Member Sign In
	
- content_for :meta_description do
	sign in to your account

- content_for :auth_main do
	#flash_area
		= render 'shared/flashes', :resource => resource
	
	= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:autocomplete => "off"}) do |f|
		
		%h2
			= f.label :login, "Display name or Email address"
			%br
			= f.text_field :login, :maxlength => 255

		%h2
			= f.label :password, "BlackDog Property Password"
			%br
			= f.password_field :password, :maxlength => 20
		
			%h2
				= f.check_box :remember_me, :class => 'auto'
				= f.label :remember_me, 'Keep me signed in for 2 weeks', :class => 'remember_me'
				
		= f.submit "Sign In", :class => 'buttonBasic'

- content_for :auth_footer do
	.footer
		= render 'devise/shared/forgot_password'
		%br
		= render 'devise/shared/confirmation_instructions'
	
- content_for :after do
	#after
		Don't have a BlackDog Property membership?
		= render 'devise/shared/signup'