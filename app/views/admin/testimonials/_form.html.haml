= form_for [:admin, resource], :html => { :autocomplete => "off" } do |f|
	- if resource.errors.any?
		#errorExplanation
			%h2= "#{pluralize(resource.errors.count, "error")} prohibited this testimonial from being saved:"
			%ul
				- resource.errors.full_messages.each do |msg|
					%li= msg

	%h4 Testimonial Details

	%table
		%tr
			%td.label= f.label :name
			%td= f.text_field :name, :size => 50

		%tr
			%td.label= f.label :location
			%td= f.text_field :location, :size => 50

		%tr
			%td.label= f.label :details
			%td= f.text_area :details, :size => "70x20"

		%tr
			%td.label= f.label :order_no
			%td= f.text_field :order_no, :size => 2

		%tr
			%td.label= f.label :published, "Published?"
			%td
				= f.check_box :published
				%p.note Note: check box if published

	.actions
		= f.submit 'Save'
