= form_for [:admin, resource], :html => { :multipart => true, :autocomplete => "off" } do |f|
	- if resource.errors.any?
		#errorExplanation
			%h2= "#{pluralize(resource.errors.count, "error")} prohibited this member from being saved:"
			%ul
				- resource.errors.full_messages.each do |msg|
					%li= msg

	%h4 Team Member Information

	%table
		%tr
			%td.label= f.label :name
			%td= f.text_field :name, :size => 50

		%tr
			%td.label= f.label :image
			%td
				- unless resource.new_record? || !resource.avatar?
					= image_tag resource.avatar.url(:team), :alt => 'Avatar', :title => 'Current avatar'
					%br
				= f.file_field :avatar
				= f.hidden_field :avatar_cache

				%br
				%p.note Optional - Provide the avatar of the member in GIF, JPG, or PNG image format.
				%p.note Images larger than 154px high by 127px wide will be automatically resized.
				- if resource.new_record? || !resource.avatar?
					%p.note This image will appear on the BlackDog Team page.
				- else 
					#logoDelete
						%p
							= f.check_box :remove_avatar
							= f.label :remove_avatar
						%p.note Oops, don't want this current avatar! Delete it by ticking the Check Box above, or select a new avatar by pressing the Choose File button.
		%tr
			%td.label= f.label :profile
			%td= f.text_area :profile, :size => "70x20"

		%tr
			%td.label= f.label :order_no
			%td= f.text_field :order_no, :size => 2

		%tr
			%td.label= f.label :published, "Published?"
			%td
				= f.check_box :published
				%p.note Note: check box if published

	.actions
		= f.submit 'Save'
